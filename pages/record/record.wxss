/* pages/record/record.wxss */
.container{
  padding: 0 20rpx;
}
.list-wrap{
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.list-wrap .record-l image{
  width: 270rpx;
  height: 320rpx;
}
.list-wrap .record-r{
  width: 100%;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: left;
}
.list-wrap .record-r .record-title{
  font-size: 40rpx;
}
.list-wrap .record-r .record-author{
  font-size: 30rpx;
  color: #333;
}
.list-wrap .record-r .record-end{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #333;
}
.list-wrap .record-r .record-end .continus{
  width: 150rpx;
  color: #4B0082
}