/* pages/person/person.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start
}
.container .bgImage{
  width: 100%;
  height: 100%;
  
}
.content{
  position: absolute;
  top: 0;
  width: 100%;
}
.user-info{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content:flex-start; 
}
.user-info .user-image{
  margin: 30rpx;
  width: 250rpx;
  height: 250rpx;
  border-radius: 125rpx;
}
.user-info .user-name{
  padding-top: 60rpx;
}
.user-more{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  padding-bottom: 30rpx;
}
.user-more .user-collection,.user-more .user-end{
  margin-top: 20rpx;
}
.content .btn{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  color: #666;
  background: #8cf
}

