.container{
padding: 0 20rpx;
}
.index .slide-image{
width: 710rpx;
height: 400rpx;
}

.index .content-item{
  margin-top: 40rpx;
}
.main-content .title{
  padding-left: 20rpx;
  font-size: 18px;
  line-height: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #000;
}
.main-content .content{
  margin-top: 35rpx;
  display: flex;
  justify-content: space-between;
}

.content .box-l .image{
  width: 250rpx;
  height: 370rpx;
}
.content .box-r{
  width: 100%;
  padding: 20rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.content .box-r .book-title{
  font-size: 16px;
  color: #333;
}
.box-r .book-desc{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:4;
  overflow: hidden;
  line-height: 1.5;
  font-size: 14px;
  color: #444;
}
.box-r .author{
  font-size: 12px;
  display: flex;
  justify-content: space-between;

}
.loading{
position: absolute;
top:50%;
left: 50%;
transform: translate(-50%,-50%);
}

.loading-more{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
}

.loading-more .loading-img{
  width: 50rpx;
  height: 50rpx;
}
.loading-more text{
  margin-left: 20rpx;
  font-size: 30rpx;
}
.no-more{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  margin-top: 40rpx;
  background: #f1f1f1;
  color: #888;
  text-align: center;
}
.no-more .no-more-text{
  position: relative;
  z-index: 990;
  font-size: 28rpx;
  width: 500rpx;
  background: #f1f1f1;
}
.no-more  .line{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%,-50%);
  width: 600rpx;
  height: 1rpx;
  background: #e9e9e9;
}
